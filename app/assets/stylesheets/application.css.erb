@import url(<%= asset_path 'google-open-sans.css' %>);

body{
    font-family: 'Open Sans', arial, sans-serif;
}

h1, h2, h3, h4, h5, h6{
    font-weight: 400;
}

strong{
    font-weight: 600;
}

a{
    color: #a9a9a9;
}

header{
    font-family: 'Open Sans', arial, sans-serif;
    font-weight: 400;
    font-size: 13px;
    background: #333;
}

    header > .container{
        margin-left: auto;
        margin-right: auto;
        position: relative;
        height: 45px;
    }

    header .navbar{
        position: absolute;
        top: 50%;
        height: 40px;
        width: 100%;
        margin-top: -20px;
        margin-bottom: 0;
    }

        header .navbar .nav > li > a{
            text-shadow: none;
            color: #d7d7d7;
        }

        header .navbar .nav > li > a:hover{
            color: white;
        }

    header .navbar-inner{
        background: none;
        border: none;
        box-shadow: none;
    }

        header .navbar-inner .brand{
            text-shadow: none;
            font-weight: 700;
            color: #ebebeb;
            font-size: 24px;
            padding: 10px 0 0;
        }

            header .navbar-inner .brand:hover{
                color: #ffffff;
            }

    header .navbar .nav{
        margin-left: 40px;
    }

    header .navbar-search{
        margin-top: 7px;
    }

        header .navbar-search .search-query{
            border-radius: 0;
            font-size: 13px;
            line-height: 1.3em;
            height: 1.3em;
            background: #525252;
            border: #000000;
            color: #D7D7D7;
        }

        header .navbar-search .search-query:focus{
            box-shadow: none;
            background: #5e5e5e;
        }

            header .navbar-search .search-query:focus::-webkit-input-placeholder{
                color: #D7D7D7;
            }

footer{
