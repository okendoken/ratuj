<!DOCTYPE html>
<html>
<head>
  <title>Ratuj</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap-responsive", :media => "all" %>
  <%= stylesheet_link_tag    params[:controller] %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "bootstrap" %>
  <%= javascript_include_tag params[:controller] %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <header>
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-responsive-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Ratuj</a>
          <div class="nav-collapse collapse navbar-responsive-collapse">
            <ul class="nav">
              <li><a href="/">Home</a></li>
              <% if user_signed_in? %>
                  <li><%= link_to "Problems", problems_path %></li>
                  <li><%= link_to 'New Problem', new_problem_path %></li>
              <% end %>
            </ul>
            <%= render('problems/search')%>
            <ul class="nav pull-right">
              <% if user_signed_in? %>
                  <li>
                    <%= link_to current_user.email, current_user %>
                  </li>
              <% end %>
              <li>
                <% if user_signed_in? %>
                    <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
                <% else %>
                    <%= link_to 'Sign In', new_user_session_path %>
                <% end %>
              </li>
            </ul>
          </div><!-- /.nav-collapse -->
        </div>
      </div><!-- /navbar-inner -->
    </div>
  </header>
  <div class="content">
    <%= yield %>
  </div>
  <footer>

  </footer>
</div>
</body>
</html>
