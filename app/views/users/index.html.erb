<h1>Listing users</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Problems count</th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.email, admin_user_path(user) %></td>
        <td><%= user.problems.count %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user)%></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
  <% end %>
</table>

<br />

